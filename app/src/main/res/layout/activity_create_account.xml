<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2849"
    tools:context=".CreateAccountActivity"
    >

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_20sdp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create new account"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/bold"
            android:padding="@dimen/_5sdp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please fill the form to continue"
            android:textColor="#8F8888"
            android:textSize="@dimen/_10ssp"
            android:textStyle="normal"
            android:fontFamily="@font/medium"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/loginSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_40sdp"
        >
        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buy_books_layout_background"
            android:paddingTop="@dimen/_15sdp"
            android:maxLines="1"
            android:letterSpacing="0.04"
            android:paddingBottom="@dimen/_15sdp"
            android:hint="Enter your Name"
            android:textColor="@color/white"
            android:textColorHint="#8F8888"
            android:inputType="text"
            android:fontFamily="@font/light"
            android:paddingRight="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"/>
        <EditText
            android:id="@+id/userEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/userName"
            android:background="@drawable/buy_books_layout_background"
            android:paddingTop="@dimen/_15sdp"
            android:maxLines="1"
            android:letterSpacing="0.04"
            android:paddingBottom="@dimen/_15sdp"
            android:hint="Enter your Email"
            android:textColor="@color/white"
            android:inputType="textEmailAddress"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColorHint="#8F8888"
            android:fontFamily="@font/light"
            android:paddingRight="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"/>
        <EditText
            android:id="@+id/userPassword"
            android:layout_below="@id/userEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/buy_books_layout_background"
            android:paddingTop="@dimen/_15sdp"
            android:letterSpacing="0.04"
            android:paddingBottom="@dimen/_15sdp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/white"
            android:hint="Enter your Password"
            android:textColorHint="#8F8888"
            android:fontFamily="@font/light"
            android:paddingRight="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"/>
        <EditText
            android:id="@+id/userSemister"
            android:layout_below="@id/userPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/buy_books_layout_background"
            android:paddingTop="@dimen/_15sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:letterSpacing="0.04"
            android:textColor="@color/white"
            android:maxLines="1"
            android:hint="Enter your Semester"
            android:inputType="number"
            android:textColorHint="#8F8888"
            android:fontFamily="@font/light"
            android:paddingRight="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"/>
        <EditText
            android:id="@+id/userDepartment"
            android:layout_below="@id/userSemister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buy_books_layout_background"
            android:paddingTop="@dimen/_15sdp"
            android:maxLines="1"
            android:paddingBottom="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:hint="Enter your Department"
            android:textColor="@color/white"
            android:textColorHint="#8F8888"
            android:inputType="text"
            android:fontFamily="@font/light"
            android:paddingRight="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:letterSpacing="0.04"
            android:textSize="@dimen/_12sdp"/>
        <EditText
            android:id="@+id/userNumber"
            android:layout_below="@id/userDepartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/buy_books_layout_background"
            android:paddingTop="@dimen/_15sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:textColor="@color/white"
            android:letterSpacing="0.04"
            android:hint="Enter your No :"
            android:inputType="number"
            android:maxLines="1"
            android:textColorHint="#8F8888"
            android:fontFamily="@font/light"
            android:paddingRight="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginSection"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:id="@+id/buttonSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:gravity="center"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/class_time_addtask_background"
                >

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    />

                <TextView
                    android:id="@+id/createAccount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/bold"
                    android:gravity="center"
                    android:letterSpacing="0.08"
                    android:padding="@dimen/_15sdp"
                    android:text="Register"
                    android:visibility="visible"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11ssp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_below="@id/buttonSection"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20ssp"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/light"
                android:text="Have an account ?"
                android:textColor="#8F8888" />
            <TextView
                android:id="@+id/signInAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/medium"
                android:textSize="@dimen/_11ssp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:text="Log In"
                android:textColor="#00BCD4" />


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>