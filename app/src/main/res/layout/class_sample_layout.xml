<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp"
    android:background="#2B2849"
    android:layout_marginBottom="@dimen/_10sdp"
    >

    <RelativeLayout
        android:id="@+id/leftSide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_5sdp"
        >
        <LinearLayout
            android:id="@+id/classTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:20"
                android:textColor="@color/white"
                android:fontFamily="@font/bold"
                android:textStyle="bold"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_12ssp"
                />
            <TextView
                android:id="@+id/endTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02:40"
                android:textColor="#BAB5B5"
                android:fontFamily="@font/bold"
                android:textStyle="bold"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_10ssp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_toEndOf="@+id/classTime"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/StartCircular"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/viewtop_outside_background"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_3sdp"
                    android:background="@drawable/viewtop_background" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_2sdp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@drawable/viewline_background" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/classtime_card_background"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_toEndOf="@+id/leftSide"
        android:padding="@dimen/_10sdp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            >

            <TextView
                android:id="@+id/subjectName"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:text="Computer Graphics"
                android:textStyle="bold"
                android:fontFamily="@font/bold"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/white"
                android:letterSpacing="0.04"
                android:padding="@dimen/_5sdp"
                android:textAlignment="textStart"
                />
        </LinearLayout>
        <ImageButton
            android:id="@+id/deleteClassImageButton"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_delete_outline_24"
            android:layout_alignParentEnd="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            >

            <TextView
                android:id="@+id/teacherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ekramul Hossain"
                android:fontFamily="@font/medium"
                android:textSize="@dimen/_8ssp"
                android:textColor="@color/white"
                android:letterSpacing="0.04"
                android:padding="@dimen/_5sdp"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/placeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class Room"
                android:fontFamily="@font/medium"
                android:textSize="@dimen/_8ssp"
                android:textColor="@color/white"
                android:letterSpacing="0.04"
                android:padding="@dimen/_5sdp"
                android:textAlignment="center"
                android:layout_marginTop="-12dp"
                />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>