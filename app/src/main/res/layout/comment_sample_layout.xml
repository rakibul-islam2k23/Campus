<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_3sdp"
    >

    <RelativeLayout
        android:id="@+id/fullCommentItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:background="#2B2849"
        android:gravity="center_vertical"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/commentImageView"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/circular_image_background"
            android:layout_marginRight="@dimen/_10sdp"
            />

        <RelativeLayout
            android:id="@+id/section"
            android:layout_width="wrap_content"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/buy_books_layout_background"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/commentImageView"
            >

            <LinearLayout
                android:id="@+id/nameAndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/commenterName"
                    android:padding="@dimen/_3sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="abdul_ahad"
                    android:textColor="@color/white"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/medium"
                    android:layout_marginRight="@dimen/_5sdp"
                    />
                <TextView
                    android:id="@+id/commentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10AM"
                    android:padding="@dimen/_2sdp"
                    android:textColor="#9A9191"
                    android:textSize="@dimen/_8sdp"
                    android:fontFamily="@font/medium"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameAndTime"
                android:text=""
                android:layout_marginTop="-10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/medium"
                android:textSize="@dimen/_7sdp"
                android:padding="@dimen/_2sdp"

                />
            <TextView
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/department"
                android:text="hello bangladesh how are you"
                android:textColor="@color/white"
                android:fontFamily="@font/bold"
                android:textSize="@dimen/_12sdp"
                android:padding="@dimen/_2sdp"

                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_below="@+id/section"
            android:background="@android:color/transparent"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/commentImageView"
            android:padding="@dimen/_5sdp"
            >
            <TextView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Like"
                android:textColor="#E6FFFFFF"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/medium"
                android:letterSpacing="0.04"
                android:textSize="@dimen/_9sdp"
                />
            <View
                android:id="@+id/view"
                android:layout_width="@dimen/_2sdp"
                android:layout_height="match_parent"
                android:background="#B3FFFFFF"
                android:layout_toRightOf="@+id/like"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                />
            <TextView
                android:id="@+id/reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reply"
                android:textColor="#E6FFFFFF"
                android:layout_toRightOf="@+id/view"
                android:fontFamily="@font/medium"
                android:letterSpacing="0.04"
                android:textSize="@dimen/_9sdp"
                />
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>