<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#2B2849"
    android:padding="@dimen/_10sdp"
    app:layout_anchorGravity="center">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/drawerImage"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:padding="@dimen/_3sdp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_computer_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline" />

    <TextView
        android:id="@+id/department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:padding="@dimen/_2sdp"
        android:text="Computer Department"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        android:fontFamily="@font/medium"
        app:layout_constraintLeft_toRightOf="@+id/drawerImage"
        app:layout_constraintTop_toTopOf="@id/guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/_20sdp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/drawerImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_begin="87dp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/headerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:clickable="false"
        android:text="Name : "
        android:padding="@dimen/_2sdp"
        android:textColor="@color/white"
        android:fontFamily="@font/medium"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <TextView
        android:id="@+id/headerName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Campus User"
        android:textColor="@color/white"
        android:padding="@dimen/_2sdp"
        android:textSize="@dimen/_11ssp"
        android:fontFamily="@font/medium"
        app:layout_constraintLeft_toRightOf="@id/headerName"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <TextView
        android:id="@+id/roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:visibility="gone"
        android:clickable="false"
        android:padding="@dimen/_2sdp"
        android:text="Roll : "
        android:textColor="@color/white"
        android:textSize="@dimen/_11ssp"
        android:fontFamily="@font/medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/headerName" />

    <TextView
        android:id="@+id/roll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="000000"
        android:textColor="@color/white"
        android:textSize="@dimen/_11ssp"
        android:fontFamily="@font/medium"
        android:visibility="gone"
        android:padding="@dimen/_2sdp"
        app:layout_constraintLeft_toRightOf="@id/roll"
        app:layout_constraintTop_toTopOf="@+id/headerName2" />

    <TextView
        android:id="@+id/semister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:clickable="false"
        android:text="Semister : "
        android:textColor="@color/white"
        android:padding="@dimen/_2sdp"
        android:textSize="@dimen/_11ssp"
        android:fontFamily="@font/medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/roll" />
    <TextView
        android:id="@+id/semister2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="0"
        android:padding="@dimen/_2sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_11ssp"
        android:fontFamily="@font/medium"
        app:layout_constraintLeft_toRightOf="@id/semister"
        app:layout_constraintTop_toTopOf="@+id/roll2" />
    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:padding="@dimen/_2sdp"
        android:clickable="false"
        android:text="Phone : "
        android:textColor="@color/white"
        android:textSize="@dimen/_11ssp"
        android:fontFamily="@font/medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/semister" />

    <TextView
        android:id="@+id/number2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="016*********"
        android:textColor="@color/white"
        android:textSize="@dimen/_11ssp"
        android:fontFamily="@font/medium"
        android:layout_marginLeft="-15dp"
        android:paddingLeft="@dimen/_2sdp"
        app:layout_constraintLeft_toRightOf="@id/semister"
        app:layout_constraintTop_toBottomOf="@+id/semister2" />


</androidx.constraintlayout.widget.ConstraintLayout>