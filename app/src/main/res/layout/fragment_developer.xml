<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2849"
    tools:context=".DeveloperFragment">


    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_180sdp"
        android:src="@drawable/port_image"
        android:layout_alignParentRight="true"
        />

    <LinearLayout
        android:id="@+id/nameSection"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:orientation="vertical"
        android:padding="@dimen/_15sdp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medium"
            android:foregroundGravity="center"
            android:gravity="center"
            android:letterSpacing="0.06"
            android:padding="@dimen/_3sdp"
            android:text="Mohammad Rakbul Islam"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:fontFamily="@font/medium"
            android:foregroundGravity="center"
            android:gravity="center"
            android:letterSpacing="0.04"
            android:padding="@dimen/_3sdp"

            android:text="Android Developer (JAVA)"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>

    <TextView
        android:id="@+id/gmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gmail Address"
        android:textSize="@dimen/_12ssp"
        android:layout_below="@id/nameSection"
        android:textColor="#E6FFFFFF"
        android:fontFamily="@font/bold"
        android:letterSpacing="0.04"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        />
    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="mohammadrakibul2k23@gmail.com"
        android:textSize="@dimen/_9ssp"
        android:layout_below="@id/gmail"
        android:textColor="#CCFFFFFF"
        android:fontFamily="@font/medium"
        android:letterSpacing="0.07"
        android:layout_marginLeft="@dimen/_10sdp"
        />

    <TextView
        android:id="@+id/Institute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Institute"
        android:textSize="@dimen/_12ssp"
        android:layout_below="@id/address"
        android:textColor="#E6FFFFFF"
        android:fontFamily="@font/bold"
        android:letterSpacing="0.04"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        />
    <TextView
        android:id="@+id/fullInstitute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Narsingdi Polytechnic Institute"
        android:textSize="@dimen/_9ssp"
        android:layout_below="@id/Institute"
        android:textColor="#CCFFFFFF"
        android:fontFamily="@font/medium"
        android:letterSpacing="0.07"
        android:layout_marginLeft="@dimen/_10sdp"
        />

    <TextView
        android:id="@+id/technology"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Technology"
        android:textSize="@dimen/_9ssp"
        android:layout_below="@id/fullInstitute"
        android:textColor="#E6FFFFFF"
        android:fontFamily="@font/bold"
        android:letterSpacing="0.04"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        />
    <TextView
        android:id="@+id/fullTechnology"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Computer Science and Engineering"
        android:textSize="@dimen/_10ssp"
        android:layout_below="@id/technology"
        android:textColor="#CCFFFFFF"
        android:fontFamily="@font/medium"
        android:letterSpacing="0.07"
        android:layout_marginLeft="@dimen/_10sdp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/fullTechnology"
        android:layout_marginTop="@dimen/_15sdp"
        android:padding="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        >
        <ImageButton
            android:id="@+id/facebook"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/name_section_background"
            android:layout_marginRight="@dimen/_15sdp"
            android:src="@drawable/facbook_icon"
            >

        </ImageButton>
        <ImageButton
            android:id="@+id/linkedin"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/name_section_background"
            android:src="@drawable/linkedin"
            android:layout_marginRight="@dimen/_15sdp"
            >

        </ImageButton>
        <ImageButton
            android:id="@+id/github"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/name_section_background"
            android:src="@drawable/github_icon"
            >

        </ImageButton>


    </LinearLayout>




</RelativeLayout>


