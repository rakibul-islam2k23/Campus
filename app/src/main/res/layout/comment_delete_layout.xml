<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="#2B2849"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/delete_comment_background"
        >
        <LinearLayout
            android:id="@+id/deleteLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Comment"
                android:textColor="#E6FFFFFF"
                android:textSize="@dimen/_13sdp"
                android:fontFamily="@font/bold"
                android:letterSpacing="0.04"
                android:layout_gravity="center"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Do you really want to Delete ?"
                android:textColor="#E6FFFFFF"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/medium"
                android:letterSpacing="0.04"
                android:layout_gravity="center"
                android:gravity="center"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/deleteLayout"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:layout_marginRight="@dimen/_15sdp"
            android:weightSum="2"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            >

            <TextView
                android:id="@+id/closeDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close"
                android:layout_marginRight="@dimen/_20sdp"
                android:textColor="#209EDC"
                android:textSize="@dimen/_12sdp"
                android:padding="@dimen/_5sdp"
                android:letterSpacing="0.05"
                android:fontFamily="@font/medium"
                />
            <TextView
                android:id="@+id/yesDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:textColor="#209EDC"
                android:textSize="@dimen/_12sdp"
                android:padding="@dimen/_5sdp"
                android:layout_gravity="end"
                android:gravity="end"
                android:letterSpacing="0.05"
                android:fontFamily="@font/medium"
                />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>