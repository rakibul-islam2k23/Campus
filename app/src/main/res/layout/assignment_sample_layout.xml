<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#2B2849">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/classtime_card_background"
        android:padding="@dimen/_10sdp">

        <LinearLayout
            android:id="@+id/subjectTeacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:lineSpacingExtra="@dimen/_2sdp"
                android:padding="@dimen/_2sdp"
                android:text="Computer Application "
                android:textColor="#E6FFFFFF"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:id="@+id/teacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/medium"
                android:padding="@dimen/_2sdp"
                android:layout_marginTop="-5dp"
                android:text="Teacher : Ikramul Hossain"
                android:textColor="#E6FFFFFF"
                android:textSize="@dimen/_10ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/jobNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/medium"
                    android:padding="@dimen/_2sdp"
                    android:text="Job :  1 to 10"
                    android:layout_marginTop="-7dp"
                    android:textColor="#E6FFFFFF"
                    android:textSize="@dimen/_11ssp" />
                <TextView
                    android:id="@+id/page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@font/medium"
                    android:padding="@dimen/_2sdp"
                    android:text="Page No : 256"
                    android:layout_marginTop="-7dp"
                    android:textColor="#E6FFFFFF"
                    android:textSize="@dimen/_11ssp" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subjectTeacher"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:id="@+id/checkInLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageButton
                    android:id="@+id/checkInImage"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_baseline_location_on_24" />

                <LinearLayout
                    android:id="@+id/chechInLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/checkInImage"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/checkInText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medium"
                        android:lineSpacingExtra="@dimen/_2sdp"
                        android:padding="@dimen/_2sdp"
                        android:text="Check In Date"
                        android:textColor="#CCFFFFFF"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/checkIn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/chechInLayout"
                        android:layout_marginTop="-10dp"
                        android:fontFamily="@font/medium"
                        android:padding="@dimen/_2sdp"
                        android:text="friday,15 Fab 2023"
                        android:textColor="#CCFFFFFF"
                        android:textSize="@dimen/_11ssp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/checkOutLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkInLayout"
                android:layout_marginTop="@dimen/_5sdp">

                <ImageButton
                    android:id="@+id/checkOutImage"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_baseline_location_on_24" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/checkOutImage"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/checkOutText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medium"
                        android:lineSpacingExtra="@dimen/_2sdp"
                        android:padding="@dimen/_2sdp"
                        android:text="Check Out Date"
                        android:textColor="#CCFFFFFF"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/checkOut"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/chechInLayout"
                        android:layout_marginTop="-10dp"
                        android:fontFamily="@font/medium"
                        android:padding="@dimen/_2sdp"
                        android:text="friday,15 Fab 2023"
                        android:textColor="#CCFFFFFF"
                        android:textSize="@dimen/_11ssp" />
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>